<body>

    <!-- ======= Header ======= -->
    <header id="header"
            class="fixed-top d-flex align-items-center header-transparent">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="logo">
                <h1 class="text-light">
                    <a href="~/Home/Index">
                        <img src="../../Content/assets\img\print house logo.png" alt="" class="img-fluid" />
                    </a>
                </h1>

            </div>
            @{
                PrintHouse.Models.PrintHouseEntities db = new PrintHouse.Models.PrintHouseEntities();
                List<PrintHouse.Models.Category> categories = db.Categories.ToList();
            }
            <nav id="navbar" class="navbar d-flex justify-content-between">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @*<li>@Html.ActionLink("Categories", "Index", "Categories")</li>*@

                    <li>
                        <div class="dropdown">
                            <a href="@Url.Action("Index","Categories")" class="dropdown-toggle" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Shop</a>
                            <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                                <li><a href="@Url.Action("Index","Categories")"> Categories</a></li>
                                @foreach (var category in categories)
                                {
                                    if (category.categoryName == "Maintenance")
                                    {
                                        <li>@Html.ActionLink(category.categoryName, "Create", "Maintenances", new { id = category.categoryId }, null)</li>
                                    }
                                    else
                                    {
                                        <li>@Html.ActionLink(category.categoryName, "Index", "subCategories", new { id = category.categoryId }, null)</li>

                                    }
                                }
                            </ul>
                        </div>
                    </li>



                    <li><a href="~/Carts/Index"><i class="bi bi-cart-check-fill" style="color: white; font-size:18px"></i></a></li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Dashboard", "AdminCategories", "Categories")</li>

                    }

                    <li> @Html.Partial("_LoginPartial")</li>

                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>
            <!-- .navbar -->
        </div>
    </header>
    <!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex justify-cntent-center align-items-center">
        <div id="heroCarousel"
             class="container carousel carousel-fade"
             data-bs-ride="carousel"
             data-bs-interval="5000">
            <!-- Slide 1 -->
            <div class="carousel-item active">
                <div class="carousel-container">
                    <h2 class="animate__animated animate__fadeInDown">
                        Welcome to <span style="color: #fbae30">Print</span><span style="color: #35b3f1"> House</span>
                    </h2>
                    <p class="animate__animated animate__fadeInUp">
                        Revolutionize Your Printing Experience with Our High-Quality 3D
                        Printers
                    </p>
                    <a href="~/Categories/Index"
                       class="btn-get-started animate__animated animate__fadeInUp">Shop Now</a>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item">
                <div class="carousel-container">
                    <h2 class="animate__animated animate__fadeInDown">
                        High precision
                    </h2>
                    <p class="animate__animated animate__fadeInUp">
                        Print Precise and Detailed Objects with Our State-of-the-Art 3D
                        Printers
                    </p>
                    <a href="~/Categories/Index"
                       class="btn-get-started animate__animated animate__fadeInUp">Shop Now</a>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item">
                <div class="carousel-container">
                    <h2 class="animate__animated animate__fadeInDown">Versatility</h2>
                    <p class="animate__animated animate__fadeInUp">
                        <!-- Experience the Power of 3D Printing and Turn Your Ideas into
                        Reality -->
                        Your One-Stop-Shop For All Your 3D Printing Needs
                    </p>
                    <a href="~/Categories/Index"
                       class="btn-get-started animate__animated animate__fadeInUp">Shop Now</a>
                </div>
            </div>

            <a class="carousel-control-prev"
               href="#heroCarousel"
               role="button"
               data-bs-slide="prev">
                <span class="carousel-control-prev-icon bx bx-chevron-left"
                      aria-hidden="true"></span>
            </a>

            <a class="carousel-control-next"
               href="#heroCarousel"
               role="button"
               data-bs-slide="next">
                <span class="carousel-control-next-icon bx bx-chevron-right"
                      aria-hidden="true"></span>
            </a>
        </div>
    </section>
    <!-- End Hero -->

    <main id="main">
        <!-- ======= Services Section ======= -->
        <section class="services">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-3 d-flex align-items-stretch"
                         data-aos="fade-up">
                        <div class="icon-box icon-box-pink">
                            <div class="icon"><i class="fa-solid fa-print"></i></div>
                            <h4 class="title"><a href="~/subCategories/Index/1">3D Printers</a></h4>
                            <p class="description">
                                Experience the future of fabrication with our
                                state-of-the-art 3D printers
                            </p>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-3 d-flex align-items-stretch"
                         data-aos="fade-up"
                         data-aos-delay="100">
                        <div class="icon-box icon-box-cyan">
                            <div class="icon"><i class="fa-solid fa-cubes"></i></div>
                            <h4 class="title"><a href="subCategories/Index/2">Consumables</a></h4>
                            <p class="description">
                                Bring your 3D printing projects to life with our selection of
                                premium filaments
                            </p>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-3 d-flex align-items-stretch"
                         data-aos="fade-up"
                         data-aos-delay="200">
                        <div class="icon-box icon-box-green">
                            <div class="icon"><i class="fa-solid fa-gears"></i></div>
                            <h4 class="title"><a href="subCategories/Index/3">Parts</a></h4>
                            <p class="description">
                                Maintain the performance and longevity of your 3D printer with
                                our selection of premium parts
                            </p>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-3 d-flex align-items-stretch"
                         data-aos="fade-up"
                         data-aos-delay="200">
                        <div class="icon-box icon-box-blue">
                            <div class="icon">
                                <i class="fa-solid fa-screwdriver-wrench"></i>
                            </div>
                            <h4 class="title"><a href="Maintenances/Create/4">Maintenance</a></h4>
                            <p class="description">
                                Trust our expert maintenance team for exceptional support in keeping your equipment running smoothly and efficiently.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Services Section -->
        <!-- ======= Why Us Section ======= -->
        <section class="why-us section-bg"
                 data-aos="fade-up"
                 date-aos-delay="200">
            <div class="container">
                <div class="row">

                    <div class="col-lg-6 mt-3">
                        <div style="position:relative; padding-bottom:56.25%; height:0;">
                            <iframe src="https://www.youtube.com/embed/aVmJShnA8jE"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen
                                    style="position:absolute; top:0; left:0; width:100%; height:100%;"></iframe>
                        </div>
                        <img src="~/Content/assets/img/3dprintingasharkyusstock.png"
                             class="img-fluid"
                             alt="" />
                    </div>


                    <div class="col-lg-6 d-flex flex-column justify-content-center p-5">
                        <div class="icon-box">
                            <div class="icon"><i class="fa-solid fa-video"></i></div>
                            <h2 class="title">
                                Discover the Power of 3D Printing: Watch Our Demo Video
                            </h2>
                            <p class="description">
                                From complex designs to simple objects, our demo videos
                                provide a glimpse into the endless possibilities of 3D
                                printing
                            </p>
                        </div>

                        <div class="icon-box">
                            <div class="icon"><i class="bx bx-fingerprint"></i></div>
                            <h2 class="title">
                                Experience the Capabilities of Our 3D Printers
                            </h2>
                            <p class="description">
                                Get a firsthand look at the power and versatility of our 3D
                                printers
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Why Us Section -->
        <!-- ======= Features Section ======= -->

        @RenderBody()

    </main>
