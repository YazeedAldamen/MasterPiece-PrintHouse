@model List<PrintHouse.Models.Featured>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<section class="features">
    <div class="container">
        <div class="section-title">
            <h2>Featured Printers</h2>
            <p>
                Explore Our Wide Range of High-Quality 3D Printers - Designed for
                Professional and Industrial Use.
            </p>
        </div>
        @{
            int count = 1;
        }
        @foreach (var item in Model)
        {
            if (count % 2 != 0)
            {
                <div class="row" data-aos="fade-up">
                    <div class="col-md-5">
                        <img src="~/Content/assets/img/@item.Product.productImage1"
                             class="img-fluid"
                             alt="" />
                    </div>
                    <div class="col-md-7 pt-4">
                        <h3>@item.Product.productName</h3>
                        <p class="fst-italic">
                           @item.Product.productDescription;
                        </p>
                        <p>
                            <a href="~/Products/SingleProduct/@item.productId" class="btn btn-primary">See More</a>
                        </p>
                    </div>
                </div>
            }
            else if (count % 2 == 0)
            {
                <div class="row" data-aos="fade-up">
                    <div class="col-md-5 order-1 order-md-2">
                        <img src="~/Content/assets/img/@item.Product.productImage1" class="img-fluid" alt="" />
                    </div>
                    <div class="col-md-7 pt-5 order-2 order-md-1">
                        <h3>@item.Product.productName</h3>
                        <p class="fst-italic">
                            @item.Product.productDescription
                        </p>
                        <p>
                            <a href="~/Products/SingleProduct/@item.productId" class="btn btn-primary">See More</a>
                        </p>
                    </div>
                </div>
            }
            count++;
        }




