                <div class="card-body pb-0">
                    <h5 class="card-title">Revenue Category</h5>

                    <div id="trafficChart"
                         style="min-height: 400px"
                         class="echart"></div>
                    @{
                        string categoryName = "";
                        decimal categoryRevenu = 0;
                    }
                    <script>
                            document.addEventListener("DOMContentLoaded", () => {
                                echarts
                                    .init(document.querySelector("#trafficChart"))
                                    .setOption({
                                        tooltip: {
                                            trigger: "item",
                                        },
                                        legend: {
                                            top: "5%",
                                            left: "center",
                                        },
                                        series: [
                                            {
                                                name: "Access From",
                                                type: "pie",
                                                radius: ["40%", "70%"],
                                                avoidLabelOverlap: false,
                                                label: {
                                                    show: false,
                                                    position: "center",
                                                },
                                                emphasis: {
                                                    label: {
                                                        show: true,
                                                        fontSize: "18",
                                                        fontWeight: "bold",
                                                    },
                                                },
                                                labelLine: {
                                                    show: false,
                                                },
                                                 @foreach (var item4 in ViewBag.result)
                                                 {
                                                     if (item4.CategoryName == "Printers")
                                                     {
                                                         categoryName = item4.CategoryName;
                                                         categoryRevenu = item4.TotalPrice;
                                                         break;
                                                     }
                                                     else{
                                                         categoryName = item4.CategoryName;
                                                         categoryRevenu = 0;
                                                     }

                                                 }
                                                data: [
                                                    {
                                                        value: @categoryRevenu,
                                                        name: "3D Printers",
                                                    },
                                                     @foreach (var item4 in ViewBag.result)
                                                     {
                                                         if (item4.CategoryName == "Consumables")
                                                         {
                                                             categoryName = item4.CategoryName;
                                                             categoryRevenu = item4.TotalPrice;
                                                             break;
                                                         }
                                                         else
                                                         {
                                                             categoryName = item4.CategoryName;
                                                             categoryRevenu = 0;
                                                         }

                                                     }
                                                    {
                                                        value: @categoryRevenu,
                                                        name: "Consumables",
                                                    },
                                                     @foreach (var item4 in ViewBag.result)
                                                     {
                                                         if (item4.CategoryName == "Parts")
                                                         {
                                                             categoryName = item4.CategoryName;
                                                             categoryRevenu = item4.TotalPrice;
                                                             break;
                                                         }
                                                         else
                                                         {
                                                             categoryName = item4.CategoryName;
                                                             categoryRevenu = 0;
                                                         }
                                                     }
                                                    {
                                                        value: @categoryRevenu,
                                                        name: "Parts",
                                                    },
