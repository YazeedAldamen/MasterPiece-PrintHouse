@model PrintHouse.Models.FAQ

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Details</h2>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mx-auto">
                <div class="card-header">
                    <h4>FAQ</h4>
                </div>
                <div class="card-body px-md-5">
                    <div class="form-group row mb-3 mt-3">
                        <label for="categoryName" class="col-sm-3 col-form-label fw-bold">Name</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.question)
                            @Html.ValidationMessageFor(model => model.question, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="categoryDescription" class="col-sm-3 col-form-label fw-bold">Description</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.answer)
                            @Html.ValidationMessageFor(model => model.answer, "", new { @class = "text-danger" })
                        </div>
                    </div>

                   

                    <div class="form-group row mb-3">
                        <div class="col-sm-12 text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.faqId }, new { @class = "btn btn-secondary btn-sm" })
                            @Html.ActionLink("Back to List", "AdminFaqs", null, new { @class = "btn btn-dark btn-sm" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
