@model PrintHouse.Models.FAQ

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<h2>Edit</h2>





@using (Html.BeginForm("Edit", "FAQs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-8 col-sm-12">
                <div class="form-horizontal">
                    <h4>Category</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.faqId)

                    <div class="form-floating mb-3">

                        <input type="text" name="question" class="form-control" id="question" placeholder="Question" required value="@Model.question" />
                        @*@Html.EditorFor(model => model.categoryName, new { htmlAttributes = new { @class = "form-control", @id = "categoryName" }, placeholder = "Name" })*@
                    <label for="Question">Question</label>

                        @Html.ValidationMessageFor(model => model.question, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-floating mb-3">
                        @*@Html.EditorFor(model => model.categoryDescription, new { htmlAttributes = new { @class = "form-control" } })*@
                        <textarea style="height:150px" type="text" multiple name="answer" class="form-control" id="answer" placeholder="Answer" cols="50" rows="200" required>@Model.answer</textarea>
                        <label for="answer">Answer</label>
                        @Html.ValidationMessageFor(model => model.answer, "", new { @class = "text-danger" })
                    </div>

                   

                    <div class="form-group mb-3">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Edit" class="btn btn-warning btn-sm" />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("Back to List", "AdminFaqs", "", new { @class = "btn btn-dark btn-sm" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}