@model PrintHouse.Models.FAQ

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "FAQs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-8 col-sm-12">
                <div class="form-horizontal">
                    <h4>FAQ</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-floating mb-3">

                        <input type="text" name="question" class="form-control" id="question" placeholder="Question" value="" required />

                        <label for="question">Question</label>

                        @Html.ValidationMessageFor(model => model.question, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-floating mb-3">

                        <input type="text" name="answer" class="form-control" id="answer" placeholder="Answer" value="" required />

                        <label for="question">Answer</label>

                        @Html.ValidationMessageFor(model => model.answer, "", new { @class = "text-danger" })

                    </div>
               

                    <div class="form-group mb-3">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-warning btn-sm" />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("Back to List", "AdminFaqs", "", new { @class = "btn btn-dark btn-sm" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}
