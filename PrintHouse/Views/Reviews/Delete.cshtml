@model PrintHouse.Models.Review

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}



<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mx-auto">
                <div class="card-header">
                    <h4>Category</h4>
                </div>
                <div class="card-body px-md-5">
                    <div class="form-group row mb-3 mt-3">
                        <label for="categoryName" class="col-sm-3 col-form-label fw-bold">Comment</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.comment)
                            @Html.ValidationMessageFor(model => model.comment, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="categoryDescription" class="col-sm-3 col-form-label fw-bold">Product</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.Product.productName)
                            @Html.ValidationMessageFor(model => model.Product.productName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row mb-3 mt-3">
                        <label for="categoryName" class="col-sm-3 col-form-label fw-bold">User</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.AspNetUser.customerFirstName) @Html.DisplayFor(model => model.AspNetUser.customerLastName)
                            @Html.ValidationMessageFor(model => model.AspNetUser.customerFirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group row ">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="col-sm-12 text-center">
                                <input type="submit" value="Delete" class="btn btn-danger btn-sm" /> |
                                @Html.ActionLink("Back to List", "AdminReviews", null, new { @class = "btn btn-dark btn-sm" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>