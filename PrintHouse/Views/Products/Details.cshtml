@model PrintHouse.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Details</h2>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mx-auto">
                <div class="card-header">
                    <h4>Product</h4>
                </div>
                <div class="card-body px-md-5" >
                    <div class="form-group row mb-3 mt-3">
                        <label for="categoryName" class="col-sm-3 col-form-label fw-bold">Name</label>
                        <div class="col-sm-9 text-center">
                            @Html.DisplayFor(model => model.productName)

                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="categoryId" class="col-sm-3 col-form-label fw-bold">Category</label>
                        <div class="col-sm-9 text-center">
                            @Html.DisplayFor(model => model.Category.categoryName)
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="categoryId" class="col-sm-3 col-form-label fw-bold">Sub Category</label>
                        <div class="col-sm-9 text-center">
                            @Html.DisplayFor(model => model.subCategory.subCategoryName)
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="categoryDescription" class="col-sm-3 col-form-label fw-bold">Description</label>
                        <div class="col-sm-9 text-center">
                            @Html.DisplayFor(model => model.productDescription)
                        </div>
                    </div>

                    <div class="form-group row mb-3 mt-5">
                        <label for="productImage1" class="col-sm-3 col-form-label fw-bold">Image</label>
                        <div class="col-sm-9 text-center">
                            <img src="~/Content/assets/img/@Model.productImage1" alt="@Model.productImage1" style="width: 50%" />
                        </div>
                    </div>
                    <div class="form-group row mb-3 mt-5">
                        <label for="productImage2" class="col-sm-3 col-form-label fw-bold">Image</label>
                        <div class="col-sm-9 text-center">
                            <img src="~/Content/assets/img/@Model.productImage2" alt="@Model.productImage2" style="width:50%" />
                        </div>
                    </div>
                    <div class="form-group row mb-3 mt-5">
                        <label for="productImage3" class="col-sm-3 col-form-label fw-bold">Image</label>
                        <div class="col-sm-9 text-center">
                            <img src="~/Content/assets/img/@Model.productImage3" alt="@Model.productImage3" style="width: 50%" />
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="productPrice" class="col-sm-3 col-form-label fw-bold">Price</label>
                        <div class="col-sm-9 text-center">
                            @Html.DisplayFor(model => model.productPrice)
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="stock" class="col-sm-3 col-form-label fw-bold">Units in Stock</label>
                        <div class="col-sm-9 text-center">
                            @Html.DisplayFor(model => model.stock)
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <div class="col-sm-12 text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.productId }, new { @class = "btn btn-secondary btn-sm" })
                            @Html.ActionLink("Back to List", "AdminProducts", null, new { @class = "btn btn-dark btn-sm" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
