@model PrintHouse.Models.subCategory

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Details</h2>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mx-auto">
                <div class="card-header">
                    <h4>Category</h4>
                </div>
                <div class="card-body px-md-5">
                    <div class="form-group row mb-3 mt-3">
                        <label for="categoryName" class="col-sm-3 col-form-label fw-bold">Name</label>
                        <div class="col-sm-9 text-center">
                            @Html.DisplayFor(model => model.subCategoryName)
                            @Html.ValidationMessageFor(model => model.subCategoryName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="categoryName" class="col-sm-3 col-form-label fw-bold">Categpru</label>
                        <div class="col-sm-9 text-center">
                            @Html.DisplayFor(model => model.Category.categoryName)
                            @Html.ValidationMessageFor(model => model.Category.categoryName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="subCategoryDescription" class="col-sm-3 col-form-label fw-bold">Description</label>
                        <div class="col-sm-9 text-center">
                            @Html.DisplayFor(model => model.subCategoryDescription)
                            @Html.ValidationMessageFor(model => model.subCategoryDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mb-3 mt-5">
                        <label for="subCategoryImage" class="col-sm-3 col-form-label fw-bold">Image</label>
                        <div class="col-sm-9 text-center">
                            <img src="~/Content/assets/img/@Model.subCategoryImage" alt="@Model.subCategoryImage" style="width:50%" />
                            @Html.ValidationMessageFor(model => model.subCategoryImage, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <div class="col-sm-12 text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.subCategoryId }, new { @class = "btn btn-secondary btn-sm" })
                            @Html.ActionLink("Back to List", "AdminsubCategories", null, new { @class = "btn btn-dark btn-sm" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>