@model PrintHouse.Models.subCategory

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "subCategories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-8 col-sm-12">
                <div class="form-horizontal">
                    <h4>Sub Category</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-floating mb-3">

                        <input type="text" name="subCategoryName" class="form-control" id="subCategoryName" placeholder="Name" value="" required />
                        @*@Html.EditorFor(model => model.categoryName, new { htmlAttributes = new { @class = "form-control", @id = "categoryName" }, placeholder = "Name" })*@
                        <label for="subCategoryName">Name</label>

                        @Html.ValidationMessageFor(model => model.subCategoryName, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-floating mb-3">
                        @*@Html.EditorFor(model => model.categoryDescription, new { htmlAttributes = new { @class = "form-control" } })*@
                        <input type="text" name="subCategoryDescription" class="form-control" id="subCategoryDescription" placeholder="Description" value="" required />
                        <label for="subCategoryDescription">Description</label>
                        @Html.ValidationMessageFor(model => model.subCategoryDescription, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-floating mb-3">
                        @*@Html.EditorFor(model => model.categoryDescription, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.DropDownList("categoryId", null, htmlAttributes: new { @class = "form-control" })
                        @*<input type="text" name="subCategoryDescription" class="form-control" id="subCategoryDescription" placeholder="Description" value="" required />*@
                        <label for="subCategoryDescription">Category</label>
                        @Html.ValidationMessageFor(model => model.categoryId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-control mb-3">
                        <label for="subCategoryImage">Image</label>

                        <input type="file" name="subCategoryImage" id="subCategoryImage" class="form-control" required accept="image/*" />
                        @Html.ValidationMessageFor(model => model.subCategoryImage, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-warning btn-sm" />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("Back to List", "AdminsubCategories", "", new { @class = "btn btn-dark btn-sm" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}