@model PrintHouse.Models.Featured

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Create</h2>



@using (Html.BeginForm("Create", "Featureds", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-8 col-sm-12">
                <div class="form-horizontal">
                    <h4>Featured</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <label for="categoryName">Product</label>


                    <div class="form-group">
                        @Html.DropDownList("productId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.productId, "", new { @class = "text-danger" })
                        @*@Html.EditorFor(model => model.categoryName, new { htmlAttributes = new { @class = "form-control", @id = "categoryName" }, placeholder = "Name" })*@

                    </div>
                    <br />
                    <div class="form-group mb-3">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-warning btn-sm" />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("Back to List", "AdminFeatured", "", new { @class = "btn btn-dark btn-sm" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}
