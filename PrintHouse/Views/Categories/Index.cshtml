@model IEnumerable<PrintHouse.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutGeneral.cshtml";
}



<main id="main">
    <!-- ======= Our Services Section ======= -->
    <section class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Our Services</h2>
                <ol>
                    <li><a href="~/Home/Index">Home</a></li>
                    <li>Categories</li>
                </ol>
            </div>
        </div>
    </section>

    <!-- ======= Service Details Section ======= -->
    <section class="service-details">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {<div class="col-md-6 d-flex align-items-stretch" data-aos="fade-up">
                        <div class="card">
                            <div class="card-img">
                                @if (item.categoryName == "Maintenance")
                                {<a href="~/Maintenances/Create/@item.categoryId">
                                        <img src="~/Content/assets/img/@item.categoryImage" alt="..." style="max-height:350px; width:100%" />
                                    </a>
                                }
                                else
                                {
                                    <a href="~/subCategories/Index/@item.categoryId">
                                        <img src="~/Content/assets/img/@item.categoryImage" alt="..." style="max-height:350px; width:100%" />
                                    </a>
                                }


                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    @if (item.categoryName == "Maintenance")
                                    {<a href="~/Maintenances/Create/@item.categoryId">@item.categoryName</a>

                                }
                                else
                                {
                                    <a href="~/subCategories/Index/@item.categoryId">@item.categoryName</a>

                                }
                                </h5>
                                <p class="card-text">
                                    @item.categoryDescription
                                </p>
                                <div class="read-more">
                                    @if (item.categoryName == "Maintenance")
                                    {
                                        <a href="~/Maintenances/Create/@item.categoryId"><i class="bi bi-arrow-right"></i> Shop</a>

                                    }
                                    else
                                    {
                                        <a href="~/subCategories/Index/@item.categoryId"><i class="bi bi-arrow-right"></i> Shop</a>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    

                }

 
            </div>
        </div>
    </section>
</main>



