@model PrintHouse.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Create</h2>



@using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-8 col-sm-12">
                <div class="form-horizontal">
                    <h4>Category</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-floating mb-3">

                        <input type="text" name="categoryName" class="form-control" id="categoryName" placeholder="Name" value="" required />
                        @*@Html.EditorFor(model => model.categoryName, new { htmlAttributes = new { @class = "form-control", @id = "categoryName" }, placeholder = "Name" })*@
                        <label for="categoryName">Name</label>

                        @Html.ValidationMessageFor(model => model.categoryName, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-floating mb-3">
                        @*@Html.EditorFor(model => model.categoryDescription, new { htmlAttributes = new { @class = "form-control" } })*@
                        <input type="text" name="categoryDescription" class="form-control" id="categoryDescription" placeholder="Description" value="" required />
                        <label for="categoryDescription">Description</label>
                        @Html.ValidationMessageFor(model => model.categoryDescription, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-control mb-3">
                        <label for="categoryImage">Image</label>

                        <input type="file" name="categoryImage" id="categoryImage" class="form-control" required />
                        @Html.ValidationMessageFor(model => model.categoryImage, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mb-3">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-warning" />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("Back to List", "AdminCategories","", new {@class="btn btn-dark"})
                    </div>
                </div>
            </div>
        </div>
    </div>
}


